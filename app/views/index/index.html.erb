<h1>
  goodservice.io
  <sub>alpha</sub>
</h1>

<ul class="routes">
  <% @routes.each do |route| %>
    <li>
      <div class="route" style="background-color: #<%= route.color %>; color: #<%= route.text_color %>"><%= route.name %></div>
      <% if (pair = @troubled_routes[route.name]) %>
        Not Good - expected headway: <%= pair[0].round(1) %> mins, actual: <%= pair[1].round(1) %> mins
      <% else %>
        Good Service
      <% end %>
    </li>
  <% end %>
</ul>
